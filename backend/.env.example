# Database Configuration
DATABASE_URL=postgresql://dataroom:dataroom_dev_password@localhost:5433/dataroom

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app:create_app
SECRET_KEY=your-secret-key-change-in-production

